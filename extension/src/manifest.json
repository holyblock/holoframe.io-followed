{
  "manifest_version": 3,
  "name": "Hologram",
  "description": "Become your virtual self on video.",
  "version": "0.2.27",
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "bundle.background.js"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "*://meet.google.com/*",
        "*://discord.com/*",
        "*://*.gather.town/*",
        "*://*.slack.com/*",
        "*://teams.live.com/*",
        "*://*.restream.io/*",
        "*://riverside.fm/*"
      ],
      "js": [
        "bundle.contentScript.js"
      ]
    }
  ],
  "devtools_page": "devtools.html",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": []
    },
    {
      "resources": [
        "bundle.background.js",
        "bundle.contentScript.js",
        "swapMedia.js",
        "tone.js",
        "assets/*",
        "config/*"
      ],
      "matches": [
        "*://meet.google.com/*",
        "*://discord.com/*",
        "*://*.gather.town/*",
        "*://*.slack.com/*",
        "*://teams.live.com/*",
        "*://*.restream.io/*",
        "*://riverside.fm/*"
      ]
    }
  ]
}
